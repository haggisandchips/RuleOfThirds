{
    "manifest_version": 2,

    "name": "Rule of Thirds",
    "description": "Simple extension to draw a 3 x 3 grid on an image to help visualise the Rule of Thirds.",
    "version": "1.3",

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],

    "browser_action": {
        "default_icon": {
            "19": "icon19.png",
            "38": "icon38.png"
        },
        "name": "Rule of Thirds"
    }
}
